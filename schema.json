{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "gps-devices",
  "description": "schema for GPS devices translator",
  "type": "object",
  "properties": {
    "altitude": {
      "description": "Altitude in m",
      "type": "number",
      "minimum": 0
    },
    "battery": {
      "description": "Battery indicator in percents",
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "course": {
      "description": "Course",
      "type": "number",
      "minimum": 0,
      "maximum": 360
    },
    "date": {
      "description": "Date of sending message",
      "type": "Date"
    },
    "id": {
      "description": "The unique identifier for a device",
      "type": "integer"
    },
    "imei": {
      "description": "Imei of the device",
      "type": "string"
    },
    "lat": {
      "description": "Latitude, float number like -64.56",
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "lng": {
      "description": "Longitude, float number like 34.56",
      "type": "number",
      "minimum": 0,
      "maximum": 180
    },
    "name": {
      "description": "Name of the device",
      "type": "string"
    },
    "numberOfSattelites": {
      "description": "Number of sattelites",
      "type": "number",
      "minimum": 0
    },
    "password": {
      "description": "Password of the device",
      "type": "string"
    },
    "speed": {
      "description": "Speed in km/h",
      "type": "number",
      "minimum": 0
    },
    "status":{
      "description": "Status of the device",
      "type": "string"
    }
  },
  "required": ["id"]
}